{
 	// Required
 	"manifest_version": 2,
 	"name": "YouTube Pauser",
 	"version": "1.0",
 	"description": "Plays and pauses your currently running YouTube video.",

 	"background": {
      "scripts": ["scripts/background.js"]
 	},

 	"browser_action": {
      "default_icon": {
          "19": "images/icon19.png",
          "38": "images/icon38.png"
      },
      "default_title": "YouTube Pauser"
  },

  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },

  "permissions": ["tabs", "*://*/*"]

}
